.syntax unified
.cpu cortex-m4
.thumb

.data
	leds: .byte 0
.text
.global main
.equ RCC_AHB2ENR, 0x4002104C

.equ GPIOA_MODER, 0x48000000
//.equ GPIOA_IDR, 0x48000010

.equ GPIOB_MODER, 0x48000400
.equ GPIOB_OTYPER, 0x48000404
.equ GPIOB_OSPEEDR, 0x48000408
.equ GPIOB_PUDER, 0x4800040C
.equ GPIOB_ODR, 0x48000414

.equ GPIOC_MODER, 0x48000800
.equ GPIOC_IDR, 0x48000810



main:
	movs  r0, #0x7
	ldr  r1, =RCC_AHB2ENR
	str  r0,[r1]


	// Set GPIOB Pin 2 as output mode: LEDs
	ldr r0, =0x400
	ldr  r1, = GPIOB_MODER
	ldr  r2, [r1]

	ldr r3, =0xFFFFF3FF
	and  r2, r3
	orrs r2, r2, r0
	str  r2, [r1]

	ldr r0, =0x800
	ldr  r1, =GPIOB_OSPEEDR
	str r0, [r1]

	// Set GPIOA Pin 4, 5, 6, 7 as input mode: DIP


	ldr  r1, =GPIOB_ODR

	ldr r3, =#0xFFFFFFFF
	str r3, [r1]
	ldr r3, =#0x20
	str r3, [r1]


	// Set GPIOC Pin 13 as input mode: Press button
	ldr r8, =GPIOC_MODER
	ldr r0, [r8]
	ldr r2, =#0xF3FFFFFF
	and r0, r2
	str r0, [r8]






L:
	//ldr r2, =GPIOA_IDR
	ldr r3, [r2]
	//mov r4, #1
	//lsl r4, #13
	//ands r3, r4

	b L
